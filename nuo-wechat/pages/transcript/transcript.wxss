/* pages/transcript/transcript.wxss */
/*图表*/
.section{
  background-color: #FFF;
  margin-bottom: 15rpx;
}
.section:last-child{
  margin-bottom: 0;
}
.canvas {
  width: 100%;
  height: 200px;
  margin-top: 10rpx;
}
/*标题*/
.section-title{
  padding: 30rpx 0 0 30rpx;
}
.flex-wrp{
  display:flex;
  padding: 20rpx 40rpx;
}
.flex-item{
  width: 350rpx;
  height: 200rpx;
  font-size: 26rpx;
  text-align: center;
}
.score{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 18px;
  color: #fc6804;
}
.score-text{
  height: 60rpx;
  font-size: 14px;
  color: #888;
}
.score-content{
  border-bottom: 2px solid #F8F8F8;
  padding: 30rpx;
}
.score-name{
  font-size: 14px;
}

.detail-score{
  font-size: 18px;
  color: #fc6804;
}
.score-detail{
  display: flex;
}
.score-time{
  font-size: 12px;
  color: #888;
  flex:1;
  text-align:right;
  line-height:20px;
}
.right-img{
  width: 60rpx;
  height: 60rpx;
  vertical-align:middle;
  float: right;
}
.score-pic{
  margin-top: 15rpx;
}
.score-pic-img{
  width: 100%;
}
.error{
  color: #888;
  font-size: 14px;
  text-align: center;
}